<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sul.math_is_fun" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Exam"
            android:label="@string/title_activity_exam" >
        </activity>
        <activity
            android:name=".ExamAdapter"
            android:label="@string/title_activity_exam_adapter" >
        </activity>
        <activity
            android:name=".RecyclerViewFragment"
            android:label="@string/title_activity_recycler_view_fragment" >
        </activity>
        <activity
            android:name=".SecondaryActivity"
            android:label="@string/title_activity_secondary" >
        </activity>
        <activity
            android:name=".AddingActivity"
            android:label="@string/title_activity_adding" >
        </activity>
    </application>

</manifest>
